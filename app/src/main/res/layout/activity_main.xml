<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Start Scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStopScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Scroll"
        app:layout_constraintBottom_toBottomOf="@+id/btnScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnScroll"
        app:layout_constraintTop_toTopOf="@+id/btnScroll" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Items"
        app:layout_constraintBottom_toBottomOf="@+id/btnScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnScroll"
        app:layout_constraintTop_toTopOf="@+id/btnScroll" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFindScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match on 23 item"
        app:layout_constraintBottom_toTopOf="@+id/btnAddScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnScroll"
        app:layout_constraintTop_toTopOf="parent" />

    <com.akribase.archycards.circular_recyclerview.CircularRecyclerView
        android:id="@+id/rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


