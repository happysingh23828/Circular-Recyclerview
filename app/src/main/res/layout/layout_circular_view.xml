<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.akribase.archycards.wheelview.WheelView
        android:id="@+id/wheelView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyItemColor="@color/teal_200"
        app:repeatItems="true"
        app:rotatable="true"
        app:rotatableWheelDrawable="false"
        app:selectionAngle="90.0"
        app:selectionColor="@null"
        app:selectionPadding="0dp"
        app:wheelColor="#020415"
        app:wheelItemCount="14"
        app:wheelItemRadius="55dp"
        app:wheelItemTransformer="com.akribase.archycards.wheelview.transformer.SimpleItemTransformer"
        app:wheelOffsetY="120dp"
        app:wheelPadding="20dp"
        app:wheelPosition="bottom"
        app:wheelRadius="350dp" />
</merge>